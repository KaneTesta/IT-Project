{
    "env": {
        "browser": true,
        "es6": true,
        "node": true,
        "jquery": true,
        "mocha": true
    },
    "plugins": [
        "chai-friendly"
    ],
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "no-tabs": 0,
        "no-param-reassign": 0,
        "no-underscore-dangle": 0,
        "no-unused-expressions": 0,
        "chai-friendly/no-unused-expressions": 2,
        "no-unused-vars": [
            "error",
            {
                "args": "none"
            }
        ]
    }
}