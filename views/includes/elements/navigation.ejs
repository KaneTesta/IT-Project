<header class="navigation-top flex-horizontal flex-center">
    <a href="/">
        <h2>Inherit That</h2>
    </a>

    <div class="flex-fill"></div>

    <div class="navigation-top-buttons">
        <% if (user) { %>
        <div class="dropdown-container">
            <button class="button-icon" data-dropdown="DropdownUser">
                <% if (user.display_picture) { %>
                <img src="<%= user.display_picture %>" />
                <% } else { %>
                <i class="material-icons-outlined">account_circle</i>
                <% }; %>

                <i class="material-icons-outlined button-icon-dropdown">arrow_drop_down</i>
            </button>

            <div id="DropdownUser" class="dropdown-content dropdown-right">
                <div class="dropdown-panel dropdown-heading">
                    <p><%= user.display_name %></p>
                </div>

                <div class="dropdown-panel">
                    <a class="button-menu" href="/auth/logout">Log Out</a>
                    <a class="button-menu" href="/auth/login">Switch User</a>
                </div>

                <div class="dropdown-panel">
                    <a class="button-menu button-error" href="/auth/delete">Delete Account</a>
                </div>
            </div>
        </div>
        <% } else { %>
        <a class="button" href="/auth/login">Log In</a>
        <% }; %>
    </div>
</header>
