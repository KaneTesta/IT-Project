<div id="DialogAddArtefact" class="dialog" data-dialog-cancelable="true">
    <div class="dialog-background"></div>
    <div class="dialog-content">
        <h1 class="dialog-heading">Add New Artefact</h1>

        <form action="/artefact/create" method="post" autocomplete="off" data-post-text="Adding New Artefact" enctype="multipart/form-data">
            <p class="input-heading">Artefact Name</p>
            <input type="text" name="name" placeholder="Artefact Name" required>

            <p class="input-heading">Description</p>
            <textarea name="description" rows="6" placeholder="Artefact Description"></textarea>

            <input type="file" name="image" accept="image/*;capture=camera">

            <input type="submit" value="Add Artefact" class="button dialog-action">
        </form>
    </div>
</div>
