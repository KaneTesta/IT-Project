<div id="DialogAddArtefact" class="dialog" data-dialog-cancelable="true">
    <div class="dialog-background"></div>
    <div class="dialog-content">
        <h1 class="dialog-heading">Add New Artefact</h1>

        <form action="/page/<%= page._id %>/addartefact" method="post" autocomplete="off" data-post-text="Adding New Artefact" enctype="multipart/form-data">
            <p class="input-heading">Artefact Name</p>
            <input type="text" name="artefactname" placeholder="Artefact Name" required>

            <p class="input-heading">Description</p>
            <textarea name="artefactdescription" rows="6" placeholder="Artefact Description"></textarea>

            <p class="input-heading">Image</p>
            <div class="button-group">
                <input id="AddArtefactImageName" class="input-description" type="text" name="imagename" placeholder="No Image Uploaded" disabled>

                <input id="AddArtefactUploadImage" data-file-description="AddArtefactImageName" type="file" name="image" accept="image/*;capture=camera">
                <label for="AddArtefactUploadImage" class="button">Upload Image</label>
            </div>

            <input type="submit" value="Add Artefact" class="button dialog-action">
        </form>
    </div>
</div>
