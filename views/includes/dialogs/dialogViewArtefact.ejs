<div id="DialogViewArtefact" class="dialog" data-dialog-cancelable="true">
    <div class="dialog-background"></div>
    <div class="dialog-content">
        <div class="dialog-panel">
            <h1 id="ArtefactViewName" class="dialog-heading"></h1>
        </div>

        <div class="dialog-panel dialog-panel-scrollable">
            <span>Owner:</span>
            <div class="chip-container">
                <%- include('../elements/chip.ejs', {idPrefix: "ArtefactViewOwner"}); %>
            </div>

            <div id="ArtefactViewViewersContainer">
                <span>Viewers:</span>
                <div class="chip-container" id="ArtefactViewViewers"></div>
            </div>

            <button id="ArtefactViewButtonShare" class="button">Share with Users</button>

            <img id="ArtefactViewImage" class="dialog-image" />
            <p id="ArtefactViewDescription"></p>
        </div>

        <div id="ArtefactViewEditPanel" class="dialog-panel">
            <button id="ArtefactViewButtonEdit" class="button dialog-action">Edit Artefact</button>
        </div>
    </div>
</div>
